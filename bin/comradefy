#!/usr/bin/env ruby
# encoding: utf-8
require 'rubygems'
require 'comradefy'

if ARGV[0]
  puts Comradefy.report ARGV.join(' ')
else
  source = ""
  while input = STDIN.gets
    if input == ".\n"
      puts (Comradefy.report source).gsub!(/\s*â˜­\s*/,'')
      break
    else
      source += input
    end
  end
end